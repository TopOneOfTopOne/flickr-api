<h1>Pictures index</h1>
<p style="color: green; border: 1px black;"><%= flash[:notice] %></p>
<%= form_for :search, url: search_path, method: 'get' do |f| %>
  <%= f.text_field :search_user_id, placeholder: '140117433@N04' %>
  <%= f.submit "Search" %>
<% end %>
<p>
  Don't know who to search for?
  <%= form_for :random, url: random_path, method: 'get' do |f| %>
    <% f.submit "Random" %>
  <% end %>
</p>
<%= debug(params) if Rails.env.development? %>
<% if @photos_urls.nil? %>
    <p> No photos found lets search for some!</p>
<% else %>
  <%= render 'photos' %>
<% end %>